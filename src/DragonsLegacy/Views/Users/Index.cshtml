@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}
<br /><br />

<div class="row">
@foreach (var user in ViewBag.UsersList)
{
    <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
        
            <div class="card-body d-flex justify-content-between flex-column">
                <div>
                        <p><i class="bi bi-person"> </i> Username: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email: @user.Email</p>


                    @if (@user.FirstName != null)
                    {
                            <p><i class="bi bi-person"> </i> First Name: @user.FirstName</p>
                    }


                    @if (@user.LastName != null)
                    {
                            <p><i class="bi bi-person"> </i> Last Name: @user.LastName</p>
                    }


                    @if (@user.PhoneNumber != null)
                    {
                            <p><i class="bi bi-phone"></i> Phone Number: @user.PhoneNumber</p>
                    }

                </div>
                <div class="d-flex flex-row justify-content-between p-3">

                    <div> <a class="btn btn-sm btn-dark" href="/Users/Show/@user.Id"> Show</a> </div>

                </div>
            </div>

         </div>
    </div>
}
   
</div>

@{
    TempData["deletebutton"] = true;
}

<br /><br />
<div class="d-flex flex-row justify-content-between p-3">

    <a class="btn btn-sm btn-dark" href="/Achievements/Index">Manage achievements</a>

    <a class="btn btn-sm btn-dark" href="/Categories/Index">Manage categories</a>

    <a class="btn btn-sm btn-dark" href="/Items/Index">Manage items</a>

    <a class="btn btn-sm btn-dark" href="/Projects/Index">Manage projects</a>

    <a class="btn btn-sm btn-dark" href="/Tasks/Index">Manage tasks</a>

    <a class="btn btn-sm btn-dark" href="/Teams/Index">Manage teams</a>

</div>
