@model DragonsLegacy.Models.Comment

@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}
<br /><br />

<h2 class="text-center mt-5">Edit Comment</h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments"))
{
    <div class="row">
        <div class="col-6 offset-3">

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <input type="hidden" name="UserId" value="@Model.UserId" />

            @Html.Label("Content", "Comment")
            @Html.TextArea("Content", Model.Content, new { @class = "summernote" })
            @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
            <br /><br />

            <button class="btn btn-success" type="submit">Edit</button>

        </div>

    </div>
}