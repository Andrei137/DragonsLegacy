<h2 class="text-center">Index Categories</h2>

@if (ViewBag.Message != null)
{
    <br />
    <br />
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />
<br />

@foreach (var category in ViewBag.Categories)
{
    <div class="card">

        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2 text-center">@category.Name</h3>

            <hr />

            <div class="d-flex flex-row justify-content-between">

                <a class="btn btn-success" href="/Categories/Show/@category.Id">Show</a>

                <a class="btn btn-primary" href="/Categories/Edit/@category.Id">Edit</a>

                <form method="post" action="/Categories/Delete/@category.Id">

                    <button type="submit" class="btn btn-danger">Delete</button>

                </form>

            </div>

        </div>

    </div>
}
