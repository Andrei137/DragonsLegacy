@model DragonsLegacy.Models.Category

@if (ViewBag.Message != null)
{
    <h2 class="alert-danger p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}
<br /><br />

<h2 class="text-center mt-5">Editare categorie</h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Categories"))
{
    <div class="row">
        <div class="col-6 offset-3">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.Label("Name", "Name")
            @Html.TextBox("Name", Model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            <br /><br />

            <button class="btn btn-success" type="submit">Add</button>

        </div>

    </div>
}
