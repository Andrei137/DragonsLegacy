@{
    string Status = Model.Status;
    if (Model.Status == "NotStarted")
    {
        Status = "Not Started";
    }
    else if (Model.Status == "InProgress")
    {
        Status = "In Progress";
    }

    string Priority = "";
    if (Model.Priority == 1)
    {
        Priority = "Low";
    }
    else if (Model.Priority == 2)
    {
        Priority = "Medium";
    }
    else if (Model.Priority == 3)
    {
        Priority = "High";
    }
}

<div class="card-body">

    @if (Model.Status == "NotStarted")
    {
        <h3 class="card-title alert-secondary py-3 px-3 rounded-2 text-center">@Model.Name</h3>
    }
    else if (Model.Status == "InProgress")
    {
        <h3 class="card-title alert-warning py-3 px-3 rounded-2 text-center">@Model.Name</h3>
    }
    else
    {
        <h3 class="card-title alert-success py-3 px-3 rounded-2 text-center">@Model.Name</h3>
    }

    <div class="d-flex flex-column justify-content-around">

        <div>
            <div class="card-text">Description: @Html.Raw(Model.Description)</div>

            <div class="card-text">Details</div>
            <ul>
                <li>Assigned to @Model.User.UserName</li>
                <li>Project: @Model.Project.Name</li>
                <li>Status: @Status</li>
                <li>Priority: @Priority</li>
                <li>Start Date: @Model.StartDate</li>
                <li>Deadline: @Model.Deadline</li>
            </ul>

            <div class="card-text">Rewards</div>
            <ul>
                <li>Experience: @Model.ExperiencePoints</li>
                <li>Coins: @Model.Coins</li>
            </ul>
        </div>

        
         <div class="d-flex justify-content-center mt-3">
            <embed src="@Model.Multimedia" style="max-height: 150px; min-height: 50px; min-width: 50px;" />
        </div>

    </div>

</div>